@{
    ViewBag.Title = "详情";
    Layout = "~/Views/Shared/_LayoutForNull.cshtml";
}

<link href="~/Content/summernote/summernote.css" rel="stylesheet" />
<script src="~/Content/summernote/summernote.js"></script>
<script src="~/Content/summernote/lang/summernote-zh-CN.js"></script>

<div class="row detail">
    <div class="col-lg-10 col-md-12 col-sm-12">
        <div class="detailHeader">
            <h1 id="detailTitle">jquery轮播图片</h1>
            <p>所属分类-图片插件</p>
            <div class="detailLove">
                <span><i class="fa fa-eye"></i>  &nbsp;824 </span>
                <span><i class="fa fa-heart"></i>  &nbsp;824 </span>
                <span><i class="fa fa-comment"></i>  &nbsp;824 </span>
            </div>
        </div>

        <div class="detailContent">
            <img class="detailImg" src="http://assets.jq22.com/plugin/2016-03-22-17-03-49.png"/>

            <div class="viewOrDownLoad">
                <a href="#" class="btn btn-success"><i class="fa fa-eye"></i>&nbsp;在线预览</a>
                <a href="#" class="btn btn-danger"><i class="fa fa-cloud-download"></i>&nbsp;立即下载</a>
            </div>
            <div class="pluginDescription">
                插件描述：文字轮播无缝滚动
            </div>
            <div class="pluginDescriptionDetail">
                summerNote插件是最好用的bootstrap编辑器，用法直接引用css和js文件即可。
                summerNote插件是最好用的bootstrap编辑器，用法直接引用css和js文件即可。
            </div>
            <div class="discussProject">
                <h3>参与讨论
                    <span class="fs14">&nbsp;回答他人问题获取炫币</span>
                </h3>
            </div>
            <div id="discussContent">
                <p>Hello Summernote</p>
            </div>
            <div class="submitDiscussForm">
                <button onclick="submitDiscuss()" type="button" data-loading-text="Loading..." class="btn btn-primary">
                    发表评论 </button>
            </div>
        </div>
    </div>

    <div class="col-lg-2 visible-lg">
        <ul class="list-group author">
            <h6>作者</h6>
            
            <a href="#"><img src="~/Content/Images/user1.png" /></a>
            <div class="">
                <h4>醉酒思红颜</h4>
            </div>
            <button type="button" class="btn btnAuthor mgtop10" onclick="Author()"><i class="fa fa-plus-circle"></i> 关注作者 <span>(0)</span></button>
            <button type="button" class="btn btnAuthor mgtop10" onclick="GetLove()"><i class="fa fa-heart-o"></i> 收藏此插件 <span>(10)</span></button>
            <div class="df"></div>
        </ul>
        <ul class="list-group mgtop30">
            <a href="#" class="list-group-item"><i class="fa fa-calendar">&nbsp; 最新发布</i></a>
            <a href="#" class="list-group-item"><i class="fa fa-star">&nbsp; 最多收藏</i></a>
            <a href="#" class="list-group-item"><i class="fa fa-comments">&nbsp; 最多评价</i></a>
            <a href="#" class="list-group-item"><i class="fa fa-arrow-circle-o-down">&nbsp; 最多下载</i></a>
            <a href="#" class="list-group-item"><i class="fa fa-leaf"></i>&nbsp; 免费下载</a>
        </ul>
    </div>

</div>

<script>
    $(document).ready(function () {
        $('#discussContent').summernote({
            height: 200, // set editor height
            minHeight: 200, // set minimum height of editor
            maxHeight: 200, // set maximum height of editor
            focus: true,
            lang: 'zh-CN'
        });
    });

    //关注作者鼠标经过效果
    $(".btnAuthor").hover(function() {
        $(this).css({ "background-color": "#F5F5F5" });
    }, function() {
        $(this).css({ "background-color": "#fff" });
    });
</script>